<h1>Article</h1>

<h4>Title: </h4><%= @article.title %>
<h4>Content: </h4><%= Kramdown::Document.new(@article.content).to_html.html_safe %>

<p><%= link_to 'edit', edit_article_path(@article) %></p>
<p><%= link_to 'delete', article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %></p>

<p><%= link_to 'Back to all articles', articles_path %></p>
